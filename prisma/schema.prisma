generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  iconUrl   String? // "/icons/lol.svg"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teams     Team[]
  matches   Match[]
}

model Team {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  countryCode String? // KR
  countryName String? // "South Kdonorea"
  gameId      String
  game        Game     @relation(fields: [gameId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Match {
  id               String   @id @default(cuid())
  matchDate        String
  matchTime        String
  gameId           String
  game             Game     @relation(fields: [gameId], references: [id])
  league           String
  teamA            String
  teamB            String
  bestOf           Int
  winnerPrediction String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
